extends base
block content 
    main.main 
        .card-container 
          each item in quiz
            .card
                .card__header
                    .card__picture
                        .card__picture-overlay &nbsp;
                        
                    h3.heading-tertirary
                        span= item.name

                .card__details
                    h4.card__sub-heading= `Difficulty Level-${item.difficultyLevel}`
                    p.card__text= item.question
                        
                        
                        
                   

                .card__footer
                    p
                        span.card__footer-value= `reward:$${item.reward}`
                        span.card__footer-text 
                    p.card__ratings
                        span.card__footer-value= item.ratingsAverage
                        span.card__footer-text= ` rating (${item.ratingsQuantity})`
                    a.btn.btn--green.btn--small(href= `/quiz/${item.slug}`) Details